# Options for controller job
controller:
  # Controller name
  name: "template"
  # Controller working directory
  path: "path_to_controller"
  # Storage limit
  storagelimit: "10G"
  # Controller STDOUT and STDERR write mode
  writemode: "append"
  # Controller time limit
  timelimit: "1-00:00:00"
  # Controller buffer time
  buffertime: "00:05:00"
  # Lock down node(s) for controller?
  exclusive: false
  # Requeue job on node failure
  requeue: true

# Options for remote database
db:
  # Database type
  api: "mongodb"
  # Database name
  name: "ToricCY"
  # Database host
  host: "129.10.135.170"
  # Database port
  port: "27017"
  # Database username
  username: "manager"
  # Database password
  password: "toric"
  # Database writeconcern
  writeconcern: "majority"
  # Database fsync
  fsync: false
  # Database collections
  collections:
    - "INVOL"
    - "POLY"
    - "TRIANG"
  # Database query
  query: 
    INVOL.POLYID: 
      $in: [287,6533,6476,6537,8601,6776,7916,8750,7980,6525,6534,6478,6477,6578,6941,19527,7445,7144,6910,6909]
    INVOL.OPLANES: 
      $exists: false
    POLY.FAV: true
  # Database projection
  projection:
    INVOL.POLYID: 1
    INVOL.GEOMN: 1
    INVOL.TRIANGN: 1
    INVOL.INVOLN: 1
    INVOL.INVOL: 1
    POLY.H11: 1
    POLY.H21: 1
    POLY.DRESVERTS: 1
    POLY.RESCWS: 1
    POLY.BASIS: 1
    TRIANG.SRIDEAL: 1
  # Database hint
  hint:
    POLYID: 1
  # Database skip
  skip:
  # Database limit
  limit: 
  # Database sort
  sort:
  # Base collection
  basecollection: "INVOL"
  # Field in base collection that determines number of tasks
  nprocsfield: 

# Options for batch jobs
job:
  # Job STDOUT and STDERR write mode
  writemode: "truncate"
  # Requeue job on node failure
  requeue: true
  # Job memory limit
  memorylimit: "10G"
  # Job time limit
  timelimit: 
  # Job buffer time
  buffertime: "00:01:00"
  # Job limits
  jobs:
    max: 50

# Options for module
module:
  # Module name
  name: "orientifold"
  # Module language
  language: "sage"
  # Arguments to module
  args:

# Other options
options:
  # Block until dependencies are finished
  blocking: false
  # Generate intermediate log file
  intermedlog: true
  # Generate intermediate output files
  intermedlocal: false
  # Generate output log file
  outlog: true
  # Generate output files
  outlocal: false
  # Write output to database
  outdb: true
  # Generate output files for statistics
  statslocal: false
  # Write statistics to database
  statsdb: true
  # Write boolean field (modname)+(markdone) in database and set to true when output is written
  markdone: "MARK"
  # Clear completed records from input files after (cleanup) records have been processed
  cleanup: 100
  # When nrefill processors have completed, refill each with niters new documents to process
  nrefill: 5
  # Number of records in each input file to a job step
  niters: 2
  # Number of output records for each worker to write
  nbatch: 1
  # Maximum number of workers writing records simultaneously
  nworkers: 100
