# Options for controller job
controller:
  # Module name
  modname: facets
  # Controller name
  controllername: template
  # Controller working directory
  workdir: path_to_controller
  # Storage limit
  storagelimit: 10G
  # Controller STDOUT and STDERR write mode
  writemode: append
  # Controller time limit
  timelimit: 1-00:00:00
  # Controller buffer time
  buffertime: 00:05:00
  # Controller delay time
  sleeptime: 1
  # Partitions (Queues) for controller
  partitions:
    - ser-par-10g
    - ser-par-10g-2
    - ser-par-10g-3
    - ser-par-10g-4
  # Number of CPUs allocated for controller
  ncpus: 1
  # Number of nodes allocated for controller
  nnodes: 1
  # Lock down node(s) for controller?
  exclusive: false
  # Requeue job on node failure
  requeue: true

# Options for remote database
db:
  # Database type
  type: mongodb
  # Database name
  name: MLEARN
  # Database host
  host: 129.10.135.170
  # Database port
  port: 27017
  # Database username
  username: manager
  # Database password
  password: toric
  # Query
  query: "[['POLY',{'H11':{'$gte':12,'$lte':20},'facetsMARK':{'$exists':False}},{'POLYID':1,'NVERTS':1},{'HINT':{'H11':1}}]]"
  #,{'SORT':[('POLYID',1)]}]]
  # Base collection
  basecollection: POLY
  # Field in base collection that determines number of threads
  nthreadsfield: 

# Options for batch jobs
job:
  # Partitions (Queues) for jobs
  partitions:
    - ser-par-10g
    - ser-par-10g-2
    - ser-par-10g-3
    - ser-par-10g-4
  # Job STDOUT and STDERR write mode
  writemode: truncate
  # Requeue job on node failure
  requeue: true
  # Job limit
  joblimit: 50

# Options for module
module:
  # Module language
  language: 
  # Arguments to module
  args:
  # Module memory limit
  memorylimit: 500M
  # Module time limit
  timelimit: 
  # Module buffer time
  buffertime: 00:01:00

# Other options
options:
  # Block until dependencies are finished
  blocking: false
  # Generate intermediate log file
  intermedlog: true
  # Generate intermediate output files
  intermedlocal: false
  # Generate output log file
  outlog: true
  # Generate output files
  outlocal: false
  # Write output to database
  outdb: true
  # Generate output files for statistics
  statslocal: false
  # Write statistics to database
  statsdb: true
  # Write boolean field (modname)+(markdone) in database and set to true when output is written
  markdone: MARK
  # Clear completed records from input files after (cleanup) records have been processed
  cleanup: 100
  # Number of records in each input file to a job step
  niters: 200
  # Number of output records for each worker to write
  nbatch: 5
  # Maximum number of workers writing records simultaneously
  nworkers: 5