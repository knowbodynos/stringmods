#!/bin/bash

#Job name
#SBATCH -J "crunch_cypoly_template_controller"
#################
#Working directory
#SBATCH -D "path_to_module/cypoly/template"
#################
#Job output file
#SBATCH -o "crunch_cypoly_template_controller.out"
#################
#Job error file
#SBATCH -e "crunch_cypoly_template_controller.err"
#################
#Job file write mode
#SBATCH --open-mode="append"
#################
#Job max time
#SBATCH --time="1-00:00:00"
#################
#Partition (queue) to use for job
#SBATCH --partition="ser-par-10g-3"
#################
#Number of tasks (CPUs) allocated for job
#SBATCH -n 1
#################
#Number of nodes to distribute n tasks across
#SBATCH -N 1
#################
#Lock down N nodes for job
#SBATCH --exclusive
#################

#Input controller info
modname="cypoly"
controllername="template"
controllerjobid="${SLURM_JOBID}"
controllerbuffertime="00:05:00"
storagelimit="10G"
sleeptime="1"

#Input database info
dbtype="mongodb"
dbusername="manager"
dbpassword="toric"
dbhost="129.10.135.170"
dbport="27017"
dbname="ToricCY"
queries="[['INVOL',{'SYMCYPOLY':{'\$exists':False},'${modname}MARK':{'\$exists':False}},{'POLYID':1,'GEOMN':1,'TRIANGN':1,'INVOLN':1,'INVOL':1}],['POLY',{},{'RESCWS':1}]]"
basecollection="INVOL"
nthreadsfield=""

#Input script info
scriptlanguage="sage"
scriptargs=""
partitions="ser-par-10g,ser-par-10g-2,ser-par-10g-3,ser-par-10g-4"
writemode="truncate"
scriptmemorylimit="500000000"
scripttimelimit=""
scriptbuffertime="00:01:00"
joblimit="50"

#Options
blocking="False"
logging="True"
templocal="False"
writelocal="False"
writedb="True"
statslocal="False"
statsdb="True"
markdone="MARK"
cleanup="100"
niters="1"
nbatch="1"
nworkers="10"

python ${CRUNCH_ROOT}/bin/controller.py "${modname}" "${controllername}" "${controllerjobid}" "${controllerbuffertime}" "${storagelimit}" "${sleeptime}" "${dbtype}" "${dbusername}" "${dbpassword}" "${dbhost}" "${dbport}" "${dbname}" "${queries}" "${basecollection}" "${nthreadsfield}" "${scriptlanguage}" "${scriptargs}" "${partitions}" "${writemode}" "${scriptmemorylimit}" "${scripttimelimit}" "${scriptbuffertime}" "${joblimit}" "${blocking}" "${logging}" "${templocal}" "${writelocal}" "${writedb}" "${statslocal}" "${statsdb}" "${markdone}" "${cleanup}" "${niters}" "${nbatch}" "${nworkers}"